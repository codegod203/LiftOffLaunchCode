@{
}
<h1>Delete InventoryCategory Items</h1>

<form method="post">
    @foreach (var evt in ViewBag.categories)
    {
        <div class="form-group">
            <label>
                <span>@evt.Name</span>
                <input type="checkbox" name="categoryIds" value="@evt.Id" />
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Inventory Categories" class="btn btn-danger" />
</form>
