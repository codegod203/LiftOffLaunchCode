
@using Moonwalkers.Models
@model List<InventoryCategory>

<h1>All Inventory Categories</h1>
 <p>
    <a class="text-dark" asp-controller="InventoryCategory" asp-action="Create">Add Inventory Category</a>
</p>

<p>
    <a class="text-dark" asp-controller="InventoryCategory" asp-action="Delete">Delete Inventory Category</a>
</p>

@if (Model.Count == 0)
{
    <p>No inventory yet!</p> 
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            
        </tr>
        
         

            @foreach (var evt in Model)
            {
                <tr>

                    <td>@evt.Id</td>
                    <td>@evt.Name</td>
                </tr>
            }
        
    </table>
}
