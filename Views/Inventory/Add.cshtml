@using Moonwalkers.ViewModels
@model AddInventoryViewModel

<h1>Add Inventory</h1>

<form asp-controller="Inventory" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Product"></label>
        <input asp-for="Product" class="form-control" />
        <span asp-validation-for="Product" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierId">Supplier </label>
        <select asp-for="SupplierId" asp-items="Model.Suppliers"></select>
    </div>
    <div class="form-group">
        <label asp-for="ProductCost"></label>
        <input asp-for="ProductCost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductSellPrice"></label>
        <input asp-for="ProductSellPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InventoryQuantity"></label>
        <input asp-for="InventoryQuantity" class="form-control" />
    </div>

  @*  <input type="radio" name="CodeType" value="QR"> Generate QR code<br>
    <input type="radio" name="CodeType" value="BarCode"> Generate Bar code<br>*@

    <input type="submit" value="Add Inventory" />
</form>
