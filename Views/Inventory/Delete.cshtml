<h1>Delete Inventory Items</h1>

<form method="post">
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Description</th>
            <th>Supplier</th>
            <th>Product Cost</th>
            <th>Product Sell Price</th>
            <th>Inventory Quantity</th>
            <th>Transaction Id</th>
            <th>Select</th>
        </tr>
        @foreach (var evt in ViewBag.inventories)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Product</td>
                <td>@evt.Description</td>
                <td>@evt.Supplier</td>
                <td>@Convert.ToDecimal(evt.ProductCost).ToString("N2")</td>
                <td>@Convert.ToDecimal(evt.ProductSellPrice).ToString("N2")</td>
                <td>@evt.InventoryQuantity</td>
                <td>@evt.TransactionId</td>
                <td>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="inventoryIds" value="@evt.Id" />
                        </label>
                    </div>
                </td>
            </tr>
        }

        <tr>
            <td colspan="9">
                <input type="submit" value="Delete Selected Inventory" class="btn btn-danger" />
            </td>
        </tr>
    </table>
</form>
