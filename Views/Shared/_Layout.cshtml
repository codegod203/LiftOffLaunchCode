﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moonwalkers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Moonwalkers.styles.css" asp-append-version="true" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title> DASHBOARD </title>

    <!-- Montserrat Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/stylesCal.css">

</head>
<body>
    <div class="grid-container">

        <!-- Header -->
        <header class="header">

            <div class="menu-icon " onclick="openSidebar()">
                <span class="material-icons-outlined">menu</span>
            </div>
            @*<div class="header-left">
                <span class="material-icons-outlined">search</span>
            </div>*@
           <div class="header-right nav-item">
    <span class="material-icons-outlined">notifications</span>
    <a href="https://outlook.office.com/mail/" target="_blank" class="material-icons-outlined">email</a>
    <a asp-area="Identity" asp-page="/Account/Logout" class="material-icons-outlined">logout</a>
</div>

        </header>
        <aside id="sidebar">
            <div class="sidebar-title">
                <div class="sidebar-brand">
                    <span class="material-icons-outlined"></span>
                    MOON WALKERS
                
</div>
<div class="material-icons-outlined" onclick="closeSidebar()">close</div>
</div>


            <ul class="sidebar-list">
                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="home" asp-action="Index">
                        <span class="material-icons-outlined">home</span>HOME
                    </a>
                </li>
                 <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="Search" asp-action="search">
                        <span class="material-icons-outlined">search</span>SEARCH
                    </a>
                </li>


                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="dashboard" asp-action="Index">
                        <span class="material-icons-outlined">dashboard</span> DASHBOARD
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="Inventory" asp-action="Index">

                        <span class="material-icons-outlined">inventory_2</span> ALL INVENTORY
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="Inventory" asp-action="Add">
                        <span class="material-icons-outlined">library_add</span> ADD INVENTORY
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="InventorySupplier" asp-action="Index">
                        <span class="material-icons-outlined">fact_check</span> ALL SUPPLIERS
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="InventorySupplier" asp-action="Create">
                        <span class="material-icons-outlined">library_add</span> ADD SUPPLIER
                    </a>
                </li>

                <li class="sidebar-list-item">
                    <a asp-area="" asp-controller="Calendar" asp-action="Index">
                        <span class="material-symbols-outlined">calendar_month</span> CALENDAR
                    </a>
                </li>
                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">upcoming</span> PENDING ORDERS
                    </a>
                </li>

                <li class="sidebar-list-item">
                    <a href="#" target="_blank">
                        <span class="material-icons-outlined">settings</span> SETTINGS
                    </a>
                </li>
            </ul>
        </aside>
        <!-- End Sidebar original version below-->
        <!--<main role="main" class="pb-3">-->
          <main  class="main-container">
            @RenderBody()
    </main>
    </div>

    <!-- Scripts -->
    <!-- ApexCharts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.35.3/apexcharts.min.js"></script>
    <!-- Custom JS -->
    <script src="js/scripts.js"></script>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   @* <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
