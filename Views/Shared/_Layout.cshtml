﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moonwalkers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Moonwalkers.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand bg-warning text-white" asp-area="" asp-controller="Home" asp-action="Index">Moonwalkers</a>



                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link bg-warning text-dark" asp-area="" asp-controller="Inventory" asp-action="Index">All Inventory Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-warning text-dark" asp-area="" asp-controller="Inventory" asp-action="Add">Add Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-warning text-dark" asp-area="" asp-controller="InventorySupplier" asp-action="Index">All Inventory Supplier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-warning text-dark" asp-area="" asp-controller="InventorySupplier" asp-action="Create">Add Supplier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="Search">Search Inventory</a>
                        </li>


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    <div class="container bg-secondary text-white">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted bg-warning">
        <div class="container bg-warning">
            &copy; 2023 - Moonwalkers - <a class="text-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>