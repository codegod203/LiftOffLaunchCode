
@using Moonwalkers.Models
@model List<InventorySupplier>

<h1>All Inventory Suppliers</h1>
 <p>
    <a class="text-dark" asp-controller="InventorySupplier" asp-action="Create">Add Inventory Supplier</a>
</p>

<p>
    <a class="text-dark" asp-controller="InventorySupplier" asp-action="Delete">Delete Inventory Supplier</a>
</p>

@if (Model.Count == 0)
{
    <p>No inventory yet!</p> 
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            
            <th>
                Supplier
                </th>
                


            
        </tr>
        
         

            @foreach (var evt in Model)
            {
                <tr>

                    <td>@evt.Id</td>
                <td>@evt.Supplier</td>
                </tr>
            }
        
    </table>
}
